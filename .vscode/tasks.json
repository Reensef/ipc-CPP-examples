{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Compile IPC shared memory message driven",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"--std=c++20",
				"-pthread",
				"-o",
				"${workspaceRoot}/bin/ipcSharedMemoryMessageDriven",
				"${workspaceRoot}/ipc_shared_memory/message_driven.cpp",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "cppbuild",
			"label": "Compile IPC named pipe P2P one process",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"--std=c++20",
				"-pthread",
				"-o",
				"${workspaceRoot}/bin/ipcNamedPipeP2POne",
				"${workspaceRoot}/ipc_named_pipes/p2p_first.cpp",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "cppbuild",
			"label": "Compile IPC named pipe P2P second process",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"--std=c++20",
				"-pthread",
				"-o",
				"${workspaceRoot}/bin/ipcNamedPipeP2PSecond",
				"${workspaceRoot}/ipc_named_pipes/p2p_second.cpp",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	],
}